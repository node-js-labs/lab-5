<%- include('./partials/header', { title }) %>
<h1 class="mb-4"><%= title %></h1>
<form method="GET" action="/books/search" class="row gy-2 gx-3 align-items-center mb-4">
  <div class="col-sm-8">
    <input type="text" id="q" name="q" class="form-control" value="<%= query || '' %>" placeholder="приклад: Шевченко, JavaScript" required>
  </div>
  <div class="col-sm-auto">
    <button type="submit" class="btn btn-primary">Пошук</button>
  </div>
</form>
<% if (typeof books !== 'undefined') { %>
<h2 class="h4 mb-3">Результати пошуку<% if (query) { %> для "<%= query %>"<% } %></h2>
<% if (books.length > 0) { %>
<ul class="list-group mb-4">
  <% books.forEach(function(book) { %>
  <li class="list-group-item">
    <a href="/books/<%= book.id %>" class="fw-bold text-decoration-none"><%= book.title %></a> — автор: <%= book.author %>
  </li>
  <% }) %>
</ul>
<% } else { %>
<p class="text-muted">Нічого не знайдено за запитом "<%= query %>".</p>
<% } %>
<% } %>
<a class="btn btn-secondary" href="/">На головну</a>
<%- include('./partials/footer') %>